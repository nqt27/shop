@model Category

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Update Category";
}
<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 m-4">
        <h4 class="text-primary">Update New Category</h4>
        <div class="row mt-3">
            <label asp-for="CategoryName">Category Name</label>
            <input asp-for="CategoryName" type="text" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="row mt-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <button type="submit" class="btn btn-warning" style="width:250px">
                    Edit
                </button>
            </div>
            <div class="col-6">
                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:250px">
                    <i class="bi bi-arrow-return-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}