@model Brand

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Create Brand";
}
<form method="post">
    <div class="border p-3 m-4">
        <h4 class="text-primary">Create New Brand</h4>
        <div class="row mt-3">
            <label>Category Name</label>
            <input asp-for="BrandName" type="text" class="form-control" />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <button type="submit" class="btn btn-warning" style="width:250px">
                    Create
                </button>
            </div>
            <div class="col-6">
                <a asp-controller="Brand" asp-action="Index" class="btn btn-secondary" style="width:250px">
                    <i class="bi bi-arrow-return-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
