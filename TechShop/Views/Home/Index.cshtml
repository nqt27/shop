@foreach (var category in Model.Categories)
{
    <div class="list-cate">
        <div class="box-cate">
            <div class="title-box">
                <div class="title">
                    <h3><a asp-controller="Home" asp-action="Product" asp-route-sortOrder="nameAsc" asp-route-cateId="@category.CategoryId" method="get">@category.CategoryName</a></h3>
                </div>
                <div class="list-price">
                    <div>
                        <b>Mức giá:</b>
                        <a href="#">5 TRIỆU - 10 TRIỆU</a>
                        <a href="#">10 TRIỆU - 20 TRIỆU</a>
                        <a href="#">20 TRIỆU - 30 TRIỆU</a>
                        <a href="#">30 TRIỆU - 40 TRIỆU</a>
                        <a href="#">TRÊN 40 TRIỆU</a>
                    </div>
                </div>
            </div>
            <div class="list-product">

        </div>
                @foreach (var product in Model.Products.Where(p => p.CategoryId == category.CategoryId).Take(4))
                {
                    <div class="pro-item">
                        <div class="img-item">
                            <a asp-controller="Home" asp-action="ProductDetail"><img src="@product.Img" alt="Alternate Text" /></a>
                        <div class="info-item">
                            <span><a href="#">@product.ProductName</a></span>
                            <br />
                            <b style="color : #ec3237;">@product.Price đ</b>
                        </div>
                    </div>
                    </div>
                }
            </div>
        </div>
}



